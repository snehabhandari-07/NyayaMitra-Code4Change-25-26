<!-- ================= JUDGE HEADER ================= -->

<style>
  /* NJDG COMPACT BLUE HEADER */
  .njdg-header {
    background: linear-gradient(90deg, #1e3a8a 0%, #1f4fa3 100%);
    height: 64px;
    z-index: 1050;
  }

  /* Emblem container (white box) */
  .njdg-emblem-box {
    width: 40px;
    height: 40px;
    background: #ffffff;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .njdg-emblem-box img {
    width: 26px;
    height: 26px;
    object-fit: contain;
  }

  .njdg-main-title {
    font-size: 1.05rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    color: #ffffff;
    margin: 0;
    line-height: 1.1;
  }

  .njdg-sub-title {
    font-size: 0.7rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #c7d2fe;
    margin: 0;
  }
</style>

<header class="navbar fixed-top njdg-header shadow-sm">
  <div class="container-fluid px-4 d-flex justify-content-between align-items-center h-100">

    <!-- LEFT : NJDG BRAND -->
    <div class="d-flex align-items-center gap-3">
      <div class="njdg-emblem-box">
        <img
          src="https://upload.wikimedia.org/wikipedia/commons/5/55/Emblem_of_India.svg"
          alt="Emblem of India">
      </div>

      <div class="lh-sm">
        <div class="njdg-main-title">NJDG</div>
        <div class="njdg-sub-title">National Judicial Data Grid</div>
      </div>
    </div>

    <!-- RIGHT : JUDGE INFO (UNCHANGED LOGIC) -->
    <div class="d-flex align-items-center text-white">

      <div class="text-end me-3">
        <div class="fw-semibold">
          Hon. <%= judgeName %>
        </div>
        <small class="opacity-75">
          Presiding Judge
        </small>
      </div>

      <div class="rounded-circle bg-warning text-dark d-flex align-items-center justify-content-center"
           style="width: 40px; height: 40px; font-weight: bold;">
        <%= judgeName.charAt(0).toUpperCase() %>
      </div>

      <a href="/" class="btn btn-sm btn-outline-light ms-3">
        <i class="fa-solid fa-right-from-bracket me-1"></i> Logout
      </a>

    </div>

  </div>
</header>

<!-- Spacer -->
<div style="height:64px;"></div>