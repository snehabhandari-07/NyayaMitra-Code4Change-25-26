<div
  id="registerCaseModal"
  class="fixed inset-0 bg-slate-900/90 backdrop-blur-md z-50 hidden flex items-center justify-center p-4"
>
  <div
    class="bg-white rounded-[2.5rem] max-w-4xl w-full max-h-[90vh] shadow-2xl overflow-hidden flex flex-col border-4 border-white animate-in zoom-in duration-300"
  >
    <div class="bg-blue-900 p-8 flex justify-between items-center">
      <div>
        <h3 class="text-white font-black uppercase tracking-widest text-lg">
          Manual Case Registration
        </h3>
        <p
          class="text-blue-300 text-xs font-bold uppercase tracking-tighter mt-1"
        >
          Add or Update Legal Records in Master Database
        </p>
      </div>
      <button
        onclick="closeModal('registerCaseModal')"
        class="text-white/40 hover:text-white transition-colors"
      >
        <i class="fas fa-times-circle text-2xl"></i>
      </button>
    </div>

    <form
      id="caseForm"
      onsubmit="handleRegistration(event)"
      class="p-10 overflow-y-auto custom-scrollbar"
    >

    <br><br>
    

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="space-y-4">
          <p
            class="text-[10px] font-black text-blue-900 uppercase tracking-widest border-l-4 border-amber-500 pl-3"
          >
            Case Identifiers
          </p>
          <input
            type="text"
            name="cnrNumber"
            placeholder="16-Digit CNR Number*"
            required
            class="w-full bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
          />
          <input
            type="text"
            name="caseNumber"
            placeholder="Official Case Number"
            class="w-full bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
          />
          <input
            type="text"
            name="clientNames"
            placeholder="Client Names (Petitioner/Respondent)"
            class="w-full bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
          />
        </div>

        <div class="space-y-4">
          <p
            class="text-[10px] font-black text-blue-900 uppercase tracking-widest border-l-4 border-amber-500 pl-3"
          >
            Court Information
          </p>
          <input
            type="text"
            name="courtName"
            placeholder="Court Name (e.g., District Court Mumbai)"
            class="w-full bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
          />
          <input
            type="text"
            name="courtSate"
            placeholder="State/Jurisdiction"
            class="w-full bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
          />
          <select
            name="newCaseStatus"
            class="w-full bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all appearance-none"
          >
            <option value="Active">Active / Pending</option>
            <option value="Hearing">Under Hearing</option>
            <option value="Disposed">Disposed / Closed</option>
          </select>
        </div>

        <div class="space-y-4 md:col-span-2">
          <p
            class="text-[10px] font-black text-blue-900 uppercase tracking-widest border-l-4 border-amber-500 pl-3"
          >
            Legal Basis
          </p>
          <div class="grid grid-cols-2 gap-4">
            <input
              type="text"
              name="underActs"
              placeholder="Under Acts (e.g. IPC, CrPC)"
              class="bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
            />
            <input
              type="text"
              name="underSections"
              placeholder="Relevant Sections (e.g. 302, 420)"
              class="bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
            />
          </div>
        </div>

        <div class="space-y-4">
          <p
            class="text-[10px] font-black text-blue-900 uppercase tracking-widest border-l-4 border-amber-500 pl-3"
          >
            Next Hearing Date
          </p>
          <input
            type="date"
            name="nextHearingDate"
            class="w-full bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
          />
        </div>

        <div class="space-y-4">
          <p
            class="text-[10px] font-black text-blue-900 uppercase tracking-widest border-l-4 border-amber-500 pl-3"
          >
            Case Age (In Years)
          </p>
          <input
            type="number"
            name="caseAge"
            placeholder="e.g. 3"
            class="w-full bg-slate-50 border-2 border-slate-100 rounded-2xl p-4 text-sm outline-none focus:border-blue-900 transition-all"
          />
        </div>
      </div>

      <div class="mt-12 flex space-x-4">
        <button
          type="submit"
          class="flex-1 bg-blue-900 text-white font-black py-5 rounded-3xl text-xs uppercase tracking-[0.2em] shadow-xl hover:bg-blue-800 transition-all active:scale-95"
        >
          Register Case & Sync with Database
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Add case -->
