<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
  <div
    class="bg-white p-6 rounded-2xl shadow-sm border-l-8 border-blue-900 hover:shadow-md transition-all"
  >
    <p
      class="text-blue-900 text-[10px] font-black uppercase tracking-widest mb-1"
    >
      Total Allocated Cases
    </p>
    <p class="text-4xl font-black text-slate-800"><%= stats.total %></p>
  </div>
  <div
    class="bg-white p-6 rounded-2xl shadow-sm border-l-8 border-amber-500 hover:shadow-md transition-all"
  >
    <p
      class="text-amber-600 text-[10px] font-black uppercase tracking-widest mb-1"
    >
      Active Matters
    </p>
    <p class="text-4xl font-black text-slate-800"><%= stats.active %></p>
  </div>
  <div
    class="bg-white p-6 rounded-2xl shadow-sm border-l-8 border-emerald-600 hover:shadow-md transition-all"
  >
    <p
      class="text-emerald-600 text-[10px] font-black uppercase tracking-widest mb-1"
    >
      Disposed Matters
    </p>
    <p class="text-4xl font-black text-slate-800"><%= stats.disposed %></p>
  </div>
  <div
    class="bg-white p-6 rounded-2xl shadow-sm border-l-8 border-slate-400 hover:shadow-md transition-all"
  >
    <p
      class="text-slate-500 text-[10px] font-black uppercase tracking-widest mb-1"
    >
      Source
    </p>
    <p class="text-xl font-black text-blue-900 mt-2">NJDG Master</p>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-12">
  <% if (cases.length > 0) { %> <% cases.forEach(caseItem => { %>
  <div
    class="bg-white rounded-[1.5rem] shadow-sm border-2 border-slate-100 flex flex-col justify-between hover:border-blue-900 transition-all group overflow-hidden"
  >
    <div class="p-6">
      <div class="flex justify-between items-start mb-3">
        <div class="flex flex-col">
          <span
            class="text-[9px] font-black text-blue-900 uppercase tracking-tighter mb-1"
            >CNR: <%= caseItem.cnrNumber %></span
          >
          <h4 class="text-lg font-black text-slate-900 truncate leading-tight">
            <%= caseItem.clientNames || 'Petitioner' %> vs. Respondent
          </h4>
        </div>
        <span
          class="px-3 py-1 rounded-full text-[9px] font-black uppercase <%= caseItem.petitionerAdvocate === lawyerName ? 'bg-blue-100 text-blue-700' : 'bg-emerald-100 text-emerald-700' %>"
        >
          <%= caseItem.petitionerAdvocate === lawyerName ? 'Petitioner Side' :
          'Respondent Side' %>
        </span>
      </div>
      <div
        class="bg-slate-50 p-4 rounded-xl border border-slate-100 grid grid-cols-2 gap-4"
      >
        <div>
          <p class="text-[9px] font-black text-slate-400 uppercase">
            Case Type
          </p>
          <p class="text-xs font-bold text-blue-900">
            <%= caseItem.caseType %>
          </p>
        </div>
        <div class="text-right">
          <p class="text-[9px] font-black text-slate-400 uppercase">Room</p>
          <p class="text-xs font-bold text-slate-700">
            Hall <%= caseItem.courtHallNumber || 'N/A' %>
          </p>
        </div>
        <div class="col-span-2 pt-2 border-t border-slate-200">
          <p class="text-[9px] font-black text-slate-400 uppercase">
            Next Listing
          </p>
          <p class="text-sm font-black text-blue-800">
            <% if (caseItem.natureOfDisposal) { %><span
              class="text-emerald-600 uppercase text-[10px]"
              >Case Disposed</span
            >
            <% } else if (caseItem.nextHearingDate) { %><%= new
            Date(caseItem.nextHearingDate).toLocaleDateString('en-IN', { day:
            '2-digit', month: 'short', year: 'numeric' }) %> <% } else { %>TBD<%
            } %>
          </p>
        </div>
      </div>
    </div>
    <div
      class="bg-slate-50 p-4 border-t flex justify-between items-center group-hover:bg-blue-50"
    >
      <div class="flex space-x-2">
        <button
          onclick="openCaseModal('<%= caseItem.cnrNumber %>', 'view')"
          class="p-2 bg-white border text-blue-900 rounded-lg hover:bg-blue-900 hover:text-white transition-all"
        >
          <i class="fas fa-folder-open"></i>
        </button>
        <button
          onclick="openCaseModal('<%= caseItem.cnrNumber %>', 'notes')"
          class="p-2 bg-white border text-slate-600 rounded-lg hover:bg-slate-800 hover:text-white transition-all"
        >
          <i class="fas fa-pen-nib"></i>
        </button>
      </div>
      <button
        onclick="openCaseModal('<%= caseItem.cnrNumber %>', 'reminder')"
        class="px-4 py-2 bg-white border-2 border-amber-500 text-amber-600 rounded-lg text-[10px] font-black hover:bg-amber-500 hover:text-white transition-all"
      >
        View
      </button>
      <button
        onclick="deleteCase('<%= caseItem.cnrNumber %>')"
        class="p-2 bg-white border-2 border-red-100 text-red-500 rounded-lg hover:bg-red-600 hover:text-white transition-all"
      >
        <i class="fas fa-trash-alt text-xs"></i>
      </button>
    </div>
  </div>
  <% }) %> <% } %>
</div>
<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-12">
  <% if (cases.length > 0) { %> <% cases.forEach(caseItem => { %>
  <div
    class="bg-white rounded-[1.5rem] shadow-sm border-2 border-slate-100 flex flex-col justify-between hover:border-blue-900 transition-all group overflow-hidden"
  ></div>
  <% }) %> <% } else { %>
  <div
    class="col-span-full text-center py-20 bg-slate-50 rounded-[2rem] border-2 border-dashed border-slate-200"
  >
    <p class="text-slate-400 font-bold uppercase tracking-widest text-xs">
      No cases found in this portfolio
    </p>
  </div>
  <% } %>
</div>

<% if (totalPages > 1) { %>
<div
  class="mt-12 flex flex-col md:flex-row justify-between items-center bg-white p-6 rounded-[2rem] shadow-sm border-2 border-slate-100 mb-20"
>
  <p
    class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4 md:mb-0"
  >
    Showing Page <%= currentPage %> of <%= totalPages %>
  </p>

  <div class="flex space-x-2">
    <% if (currentPage > 1) { %>
    <a
      href="/lawyer/dashboard/<%= lawyerName %>?page=<%= currentPage - 1 %><%= (typeof searchQuery !== 'undefined' && searchQuery) ? '&search=' + searchQuery : '' %>"
      class="px-4 py-2 bg-slate-50 border-2 border-slate-100 rounded-xl text-[10px] font-black text-slate-600 hover:border-blue-900 transition-all"
    >
      <i class="fas fa-chevron-left mr-1"></i> Prev
    </a>
    <% } %>

    <div class="flex items-center space-x-1">
      <% for(let i = 1; i <= totalPages; i++) { %>
      <a
        href="/lawyer/dashboard/<%= lawyerName %>?page=<%= i %><%= (typeof searchQuery !== 'undefined' && searchQuery) ? '&search=' + searchQuery : '' %>"
        class="w-10 h-10 flex items-center justify-center rounded-xl font-black text-xs transition-all <%= i == currentPage ? 'bg-blue-900 text-white shadow-lg' : 'bg-white border-2 border-slate-50 text-slate-400 hover:border-blue-900' %>"
      >
        <%= i %>
      </a>
      <% } %>
    </div>

    <% if (currentPage < totalPages) { %>
    <a
      href="/lawyer/dashboard/<%= lawyerName %>?page=<%= parseInt(currentPage) + 1 %><%= (typeof searchQuery !== 'undefined' && searchQuery) ? '&search=' + searchQuery : '' %>"
      class="px-4 py-2 bg-slate-50 border-2 border-slate-100 rounded-xl text-[10px] font-black text-slate-600 hover:border-blue-900 transition-all"
    >
      Next <i class="fas fa-chevron-right ml-1"></i>
    </a>
    <% } %>
  </div>
</div>
<% } %>

