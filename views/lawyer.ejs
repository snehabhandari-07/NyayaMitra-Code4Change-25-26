<%- include('partials/header_lawyer') %>

<div
  class="flex flex-col md:flex-row justify-between items-start md:items-end mb-8 space-y-4 md:space-y-0 border-b-4 border-amber-500 pb-6"
>
  <div class="flex items-center space-x-4">
    <br />
    <div>
      <!-- <h2 class="text-3xl font-black text-blue-900 tracking-tight">Lawyer Analytics Dashboard</h2> -->
      <p class="text-slate-500 text-sm font-semibold uppercase tracking-widest">
        Counsel Records: <span class="text-blue-700"><%= lawyerName %></span>
      </p>
    </div>
  </div>
  <form
    action="/lawyer/dashboard/<%= lawyerName %>"
    method="GET"
    class="flex items-center space-x-2 w-full md:w-auto"
  >
    <div class="relative group">
      <input
        type="text"
        name="search"
        value="<%= (typeof searchQuery !== 'undefined') ? searchQuery : '' %>"
        placeholder="Search CNR Number"
        class="pl-10 pr-4 py-3 border-2 border-slate-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-900 outline-none text-sm w-full md:w-80 shadow-inner transition-all"
      />
      <i
        class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-blue-900"
      ></i>
    </div>
    <button
      type="submit"
      class="bg-blue-900 text-white px-6 py-3 rounded-xl text-sm font-bold hover:bg-blue-800 transition-all shadow-lg active:scale-95 uppercase tracking-widest"
    >
      Search
    </button>
    <% if(typeof searchQuery !== 'undefined' && searchQuery) { %>
    <a
      href="/lawyer/dashboard/<%= lawyerName %>"
      class="text-xs text-red-600 hover:text-red-800 font-bold px-2"
      >RESET</a
    >
    <% } %>
  </form>
</div>
<br />


<br>
<div class="mb-10 px-2">
    <div class="bg-slate-900 rounded-[2.5rem] border-4 border-amber-500 shadow-2xl overflow-hidden">
        <div class="bg-slate-800 px-10 py-6 border-b border-slate-700 flex justify-between items-center">
            <div>
                <h3 class="text-white font-black uppercase tracking-widest text-sm">
                  NyayaMitra
                </h3>
                <p class="text-slate-400 text-[9px] uppercase font-bold mt-1">NJDG Data + BNS 2024 Legal Framework</p>
            </div>
            <div class="flex bg-slate-900 rounded-xl p-1">
                <button onclick="switchIntelTab('approach')" id="btn-approach" class="px-4 py-2 text-[10px] font-black rounded-lg transition-all bg-amber-500 text-slate-900">APPROACH</button>
                <button onclick="switchIntelTab('mapper')" id="btn-mapper" class="px-4 py-2 text-[10px] font-black rounded-lg transition-all text-slate-400">BNS MAPPER</button>
            </div>
        </div>

        <div class="p-10">
            <div class="flex gap-4">
                <input type="text" id="intelInput" placeholder="Enter CNR for Tactics..." 
                       class="flex-1 bg-slate-800 border-2 border-slate-700 rounded-2xl p-4 text-white text-sm outline-none focus:border-amber-500">
                <button onclick="runIntelSearch()" class="bg-amber-500 text-slate-900 font-black px-8 py-4 rounded-2xl uppercase text-xs hover:scale-105 transition-all shadow-lg">
                    Process Intelligence
                </button>
            </div>

            <div id="intelLoader" class="hidden mt-8 text-center py-6">
                <div class="inline-block h-6 w-6 animate-spin rounded-full border-4 border-amber-500 border-r-transparent"></div>
                <p class="text-amber-500 text-[9px] font-black uppercase mt-3">Synthesizing Legal Codes...</p>
            </div>

            <div id="intelResultBox" class="hidden mt-8">
                <div class="bg-slate-800/50 p-6 rounded-3xl border border-slate-700 relative">
                    <span id="intelType" class="absolute top-[-10px] left-6 bg-slate-700 px-3 py-1 rounded text-[8px] font-black text-white uppercase"></span>
                    <p id="intelContent" class="text-slate-200 text-sm leading-relaxed whitespace-pre-wrap italic"></p>
                </div>
